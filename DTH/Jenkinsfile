pipeline{
	agent any

    stages {
        
        stage('Build') {
            steps {
            	sh 'mvn' 'clean' 'install' '-DskipTests'
            }
        }
        
        stage('Test') {
            steps {
               	sh 'make check || true' 
                junit '**/target/*.xml' 
            }
        }
        
        stage('Deploy') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
            	sh 'cd dth'
                sh 'docker-compose up'
            }
        }
    }
}